<Window x:Class="Macroscope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Macroscope"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добро пожаловать на главную страницу!" 
                       FontWeight="Bold" FontSize="20" Margin="0 0 0 20" />

            <Button Content="Просмотр камеры" Width="200" Height="50" 
                    Background="Green" Foreground="White" FontWeight="Bold"
                    Command="{Binding      NavigateToCameraCommand}" />

        </StackPanel>
    </Grid>
</Window>
